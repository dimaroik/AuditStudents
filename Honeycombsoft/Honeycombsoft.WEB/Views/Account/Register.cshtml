

@{
    ViewBag.Title = "Register";
}

<div id="register" class="col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1>Register</h1>
        </div>

        <div class="panel-body">
            <div ng-controller="RegisterController">
                <form novalidate name="f1" ng-submit="SaveData(RegisterModel)">
                    <div style="color:rgb(144, 2, 2)">{{message}}</div>
                    <table>
                        <tr>
                            <td>Email : </td>
                            <td>
                                <input type="text" ng-model="RegisterModel.Email" name="uEmail" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uEmail.$dirty || Submitted) && f1.uEmail.$error.required">Email required </span>
                            </td>
                        </tr>

                        <tr>
                            <td>Password : </td>
                            <td>
                                <input type="password" ng-model="RegisterModel.Password" name="uPassword" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uPassword.$dirty || Submitted) && f1.uPassword.$error.required">Password required </span>
                            </td>
                        </tr>

                        <tr>
                            <td>ConfirmPassword : </td>
                            <td>
                                <input type="password" ng-model="RegisterModel.ConfirmPassword" name="uConfirmPassword" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uConfirmPassword.$dirty || Submitted) && f1.uConfirmPassword.$error.required">ConfirmPassword wrong </span>
                            </td>
                        </tr>

                        <tr>
                            <td>Name : </td>
                            <td>
                                <input type="text" ng-model="RegisterModel.Name" name="uName" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uName.$dirty || Submitted) && f1.uName.$error.required">Name required </span>
                            </td>
                        </tr>
                        <tr>
                            <td>LastName : </td>
                            <td>
                                <input type="text" ng-model="RegisterModel.LastName" name="uLastName" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uLastName.$dirty || Submitted) && f1.uLastName.$error.required">LastName required </span>
                            </td>
                        </tr>
                        <tr>
                            <td>Age : </td>
                            <td>
                                <input type="text" ng-model="RegisterModel.Age" name="uAge" ng-class="Submitted?'ng-dirty':''" required autofocus class="form-control" />
                                <span class="error" ng-show="(f1.uAge.$dirty || Submitted) && f1.uAge.$error.required">Age required </span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="{{submitText}}" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div> 
            
        </div>
        <div class="panel-footer">
            <div>
                @Html.ActionLink("Register with facebook", "Facebook", "Account")
            </div>
        </div>
    </div>
</div>



            

            

            @section Scripts {
                
                <script src="~/Scripts/MyScripts/angular/AngularController/RegisterController.js"></script>
            }
